<!doctype html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <body class="bg-dark text-white">
      <%- include('./partials/nav.ejs') %>
      <br>
      <br>
      <br>
      <br>
      <br>
      <div class="col d-flex justify-content-center pt-5">
        <div class="card text-dark bg-light mb-3" style="width: 25rem;">
            <div class="card-header">Add New Person</div>
            <form action="/append" method="POST">
                <div class="card-body">
                    <div class="col">
                        <div class="mb-3">
                          <label for="name">Fullname</label>
                          <input type="text" class="form-control" id="fullname" name="fullname">
                        </div>
                        <div class="mb-3">
                          <label for="nationality">Nationality</label>
                          <input type="text" class="form-control" id="nationality" name="nationality" value="<%= nationality %>" readonly>
                        </div>
                        <div class="mb-3">
                          <label for="birthdate">Birthdate</label>
                          <input class="form-control" type="date" name="birthdate" id="birthdate">
                          </div>
                          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/datalist" type="button" class="btn btn-outline-dark">Back</a>
                            <button class="btn btn-outline-dark me-md-2" type="submit">Save</button>
                          </div>
                      </div>
                </div>
            </form>
          </div>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
  </body>
</html>