<!doctype html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <body class="bg-dark text-white">
      <%- include('./partials/nav.ejs') %>
      <div class="row pt-5">
        <div class="col-6">
           <span class="d-flex justify-content-end"><img src= "../assets/<%= img %>.png" style="max-width: 50%;"></span>
        </div>
        <div class="col-4 pt-5">
          <h3 class="d-flex text-light display-4 pt-3"><%= date %></h3>
          <h3 class="d-flex text-light display-4 pt-6"><%= time %></h3>
        </div>
      </div>
      <form method="GET" action="/newdata">
        <div class="d-flex justify-content-end">
          <div class="col-3 mb-auto pt-3 pb-1">
            <button type="submit" class="btn btn-outline-light btn-sm">Add New Person Here</button>
        </div>
        </div>
    <center>
    <div class="pt-5 container-lg">
        <table class="table table-dark table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Person Name</th>
                <th scope="col">Birthdate</th>
                <th scope="col">Nationality</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% var num = 1; %>
              <% if (persons.length > 0) { %>
                <% persons.forEach(person => { %> 
                  <tr>
                    <td> <%=num%> </td>
                    <td> <%=person["fullname"]%> </td>
                    <td> <%=person["birthdate"]%> </td>
                    <td> <%=person["nationality"]%> </td>
                    <td> <a href="/viewdata/<%= person._id %>" type="button" class="btn btn-outline-light">View</a> </td>
                  </tr>
                  <% num++; %>
                <% }) %> 
              <% } %>
            </tbody>
          </table>
    </div>
    </center>
  </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
  </body>
</html>